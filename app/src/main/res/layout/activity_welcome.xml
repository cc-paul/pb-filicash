<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Welcome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/filicash_logo1" />

            <LinearLayout
                android:id="@+id/lnSignUp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/layout_bg"
                android:backgroundTint="#f39c12">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/man_bold"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/man_bold"
                        android:gravity="center"
                        android:text="Login" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/man_bold"
                android:gravity="center"
                android:text="Forgot Password?" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#F3F5F9"></View>


            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgFB"
                    android:src="@drawable/icn_facebook"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"/>

                <ImageView
                    android:id="@+id/imgTwitter"
                    android:src="@drawable/icn_twitter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"/>

                <ImageView
                    android:id="@+id/imgInstagram"
                    android:src="@drawable/icn_instagram"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>