<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".receipt">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="#f39c12" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize">

                <LinearLayout
                    android:id="@+id/lnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="left">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <ImageView
                            android:src="@drawable/icn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/man_bold"
                            android:gravity="center"
                            android:text="Receipt Confirmation"></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnDownload"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icn_download_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#F3F5F9"></View>

        <LinearLayout
            android:id="@+id/lnReceiptContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_margin="30dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvLabel1"
                        android:textSize="15dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/man_extrabold"
                        android:text="{{ LABEL 1 }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/img711"
                        android:src="@drawable/filicash_logo2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:id="@+id/tvLabel2"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/man_medium"
                        android:text="{{ LABEL 2 }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvLabel3"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/man_extrabold"
                        android:text="{{ LABEL 3 }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#F3F5F9"></View>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/tvLabel4"
                            android:text="{{ LABEL 4 }}"
                            android:fontFamily="@font/man_reg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>


                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvLabel5"
                                android:gravity="right"
                                android:text="{{ LABEL 5 }}"
                                android:fontFamily="@font/man_reg"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#F3F5F9"></View>


                    <TextView
                        android:id="@+id/tvLabel6"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/man_extrabold"
                        android:text="{{ LABEL 6 }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvLabel7"
                        android:layout_marginTop="3dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/man_medium"
                        android:text="{{ LABEL 7 }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>